{% trans_default_domain 'app' %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'todo' | trans }}</h1>

    <table>
        <tbody>
            <tr>
                <th>{{ 'id' | trans }}</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>{{ 'title' | trans }}</th>
                <td>{{ todo.title }}</td>
            </tr>
            <tr>
                <th>{{ 'content' | trans }}</th>
                <td>{{ todo.content }}</td>
            </tr>
            <tr>
                <th>{{ 'datecreate' | trans }}</th>
                <td>{% if todo.dateCreate %}{{ todo.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'datemodify' | trans }}</th>
                <td>{% if todo.dateModify %}{{ todo.dateModify|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'datesheduled' | trans }}</th>
                <td>{% if todo.dateSheduled %}{{ todo.dateSheduled|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'catid' | trans }}</th>
                <td>{{ todo.catId }}</td>
            </tr>
            <tr>
                <th>{{ 'status' | trans }}</th>
                <td>{{ todo.status }}</td>
            </tr>
            <tr>
                <th>{{ 'user' | trans }}</th>
                <td>{{ todo.userID }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todos_index') }}">{{ 'back to the list' | trans }}</a>
        </li>
        <li>
            <a href="{{ path('todos_edit', { 'id': todo.id }) }}">{{ 'edit' | trans }}</a>
        </li>
    </ul>
{% endblock %}
