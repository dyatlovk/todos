{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form, { 'attr': {'class': 'uk-form'}}) }}
        <input type="submit" class="uk-button uk-button-primary" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('category_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="uk-button uk-button-primary">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
